<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
	
    <animation-list android:id="@+id/oven_animation" android:oneshot="false">
	    <item android:drawable="@drawable/game3_oven1" android:duration="50" />
	    <item android:drawable="@drawable/game3_oven2" android:duration="50" />
	 </animation-list>
    
    <RelativeLayout
        android:id="@+id/Game3RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="380dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/progress" />

        <ImageView
            android:id="@+id/Game3_mix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:src="@drawable/game3_mix1" />
        
        <ImageView
            android:id="@+id/Game3_oven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp" />
        
        <ImageView
            android:id="@+id/Game3_dough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:src="@drawable/game3_oven2"
            android:visibility="invisible" />
        
        <ImageView 
            android:id="@+id/Game3_eggbeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game3_eggbeat"
            android:visibility="invisible"/>
        
        <ImageView 
            android:id="@+id/Game3_cake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:src="@drawable/game3_cake1"
            android:visibility="invisible"/>

    </RelativeLayout>

</FrameLayout>
