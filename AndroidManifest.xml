<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.playpalpengame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.playpalpengame.BeginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.example.playpalpengame.MainActivity"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape" >
        </activity>
        <activity 
            android:name="com.example.playpalpengame.LoadingActivity"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape" >
        </activity>
        <activity 
            android:name="com.example.playpalpengame.Game1Activity"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape" >
        </activity>
        <activity 
            android:name="com.example.playpalpengame.Game2Activity"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape" >
        </activity>
        <activity 
            android:name="com.example.playpalpengame.Game3Activity"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape" >
        </activity>
        <activity 
            android:name="com.example.playpalpengame.Game4Activity"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape" >
        </activity>
    </application> 
</manifest>
